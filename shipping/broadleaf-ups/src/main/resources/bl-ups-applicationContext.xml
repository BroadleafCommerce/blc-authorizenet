<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="blPersistenceUnitManager" class="org.broadleafcommerce.common.extensibility.jpa.MergePersistenceUnitManager">
        <property name="persistenceXmlLocations">
            <list>
                <value>classpath*:/META-INF/persistence-fulfillment-ups.xml</value>
            </list>
        </property>
    </bean>

    <bean id="blEntityConfiguration" class="org.broadleafcommerce.common.persistence.EntityConfiguration">
        <property name="entityContexts">
            <list>
                <value>classpath:bl-ups-applicationContext-entity.xml</value>
            </list>
        </property>
    </bean>

    <bean id="blFulfillmentPricingService" class="org.broadleafcommerce.core.pricing.service.FulfillmentPricingServiceImpl">
        <property name="providers">
            <list>
                <bean class="org.broadleafcommerce.vendor.ups.provider.UPSFulfillmentPricingProvider" >
                    <property name="UPSPricingGateway" ref="blUPSPricingGateway"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="blUPSPricingGateway" class="org.broadleafcommerce.vendor.ups.service.UPSPricingGatewayImpl"/>
</beans>
